@model OrderFoodOnline.Models.Foods

@{ ViewData["FoodType"] = "Edit"; }
@{ Layout = "_Layout2"; }
<br />
<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for=" FoodName" class="control-label"></label>
                <input asp-for=" FoodName" class="form-control border" />
                <span asp-validation-for=" FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" FoodType" class="control-label"></label>
                <input asp-for=" FoodType" class="form-control border" />
                <span asp-validation-for=" FoodType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" NumberOfDishes" class="control-label"></label>
                <input asp-for=" NumberOfDishes" class="form-control border" />
                <span asp-validation-for=" NumberOfDishes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" Rate" class="control-label"></label>
                <input asp-for=" Rate" class="form-control border" />
                <span asp-validation-for=" Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" Location" class="control-label"></label>
                <input asp-for=" Location" class="form-control border" />
                <span asp-validation-for=" Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" type="button" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>
